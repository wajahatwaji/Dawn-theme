<div class="featured_items">
    <div class="inner">
        {% for block in section.blocks %}
            <div class="item_detail">
                <h2>{{block.settings.item_title}}</h2>
                <a href="{{block.settings.item_url}}">{{block.settings.item_link_text}}</a>
            </div>
        {% endfor %}
    </div>
</div>

{% schema %}
  {
    "name": "Featured Items",
    "max_blocks": 3,
	"blocks": [ 
	   {
		   "type": "item",
		   "name": "Feature Item",
			"settings": [
                {
                    "type": "text",
                    "id": "item_title",
                    "label": "Featured Item Title"
                },
				{
					"type": "text",
					"id": "item_link_text",
					"label": "Featured Item Link"
				},
                {
					"type": "text",
					"id": "item_url",
					"label": "Featured Item Url"
				}
			]
	   }
	
	]
  }
{% endschema %}
